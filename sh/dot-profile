# Import Homebrew
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
if [ -r "$HOMEBREW_PREFIX/etc/profile.d/bash_completion.sh" ]; then
	. "$HOMEBREW_PREFIX/etc/profile.d/bash_completion.sh"
fi

# Configure less
export LESS='--RAW-CONTROL-CHARS --clear-screen --tabs=4 --use-color -Ps%lt-%lb/%L%t$ -Pm%T %F lines %lt-%lb/%L%t$ -PM%T %F (%i/%m) lines %lt-%lb/%L bytes %bt-%bb/%B%t$ --long-prompt'
export LESSHISTFILE='/dev/null'
export LESSOPEN='|lesspipe.sh %s'
export LESSQUIET=1
# Use less as the default pager
export PAGER='less'

# Configure man
# shellcheck disable=SC2016
export MANLESS='manual $MAN_PN lines %lt-%lb/%L%t'
export MANROFFOPT='-c'


# Source .profile.d/*.sh
if [ -d "$HOME/.profile.d" ]; then
  for f in "$HOME/.profile.d"/*.sh; do
    if [ -r "$f" ]; then
      . "$f"
    fi
  done
  unset i
fi
