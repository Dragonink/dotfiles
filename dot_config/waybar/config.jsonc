{
  "position": "bottom",

  "modules-left": [
    "hyprland/workspaces",
    "hyprland/submap",
    "hyprland/window",
  ],
  "modules-right": [
    "clock",
    "group/powermenu",
  ],

  "hyprland/workspaces": {
    "format": "<b>{name}</b><big> {windows}</big>",
    "window-rewrite-default": "",
    "window-rewrite": {
      "class<kitty>": "",
      "class<firefox>": "󰈹",
      "class<(dis|leg)cord>": "",
    },
  },
  "hyprland/submap": {
    "always-on": true,
    "format": "<big> </big>{}",
    "tooltip": false,
  },
  "hyprland/window": {
    "separate-outputs": true,
    "icon": true,
    "icon-size": 20,
  },
  "clock": {
    "interval": 1,
    "format": "<tt>{:L%c}</tt><big> </big> ",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "weeks-pos": "left",
      "mode-mon-col": 3,
      "format": {
        "months": "<b>{}</b>",
        "weeks": "<span color='#99ff44'>{}</span>",
        "weekdays": "<span color='#ffcc66'>{}</span>",
        "today": "<span background='#ff6699'>{}</span>",
      },
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
    },
  },
  "group/powermenu": {
    "orientation": "inherit",
    "drawer": {
      "transition-left-to-right": false,
    },
    "modules": [
      "custom/logout",
      "custom/poweroff",
      "custom/reboot",
      "custom/lock",
    ],
  },
  "custom/logout": {
    "format": "󰗽",
    "tooltip-format": "Log out",
    "on-click": "zenity --question --icon system-log-out-symbolic --text '<b>Log out</b>?' && loginctl terminate-user ''",
  },
  "custom/poweroff": {
    "format": "<big>󰐥</big>",
    "tooltip-format": "Power off",
    "on-click": "zenity --question --icon system-shutdown-symbolic --text '<b>Power off</b> the machine?' && systemctl poweroff",
  },
  "custom/reboot": {
    "format": "<big>󰜉</big>",
    "tooltip-format": "Reboot",
    "on-click": "zenity --question --icon system-reboot-symbolic --text '<b>Reboot</b> the machine?' && systemctl reboot",
  },
  "custom/lock": {
    "format": "󰌾",
    "tooltip-format": "Lock",
    "on-click": "loginctl lock-session",
  },
}
