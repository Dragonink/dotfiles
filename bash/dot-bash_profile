# Source .profile
if [ -r "$HOME/.profile" ]; then
	#shellcheck disable=SC1091
	source "$HOME/.profile"
fi

# Source .config/bash_profile.d/*
BASH_PROFILE_D="$XDG_CONFIG_HOME/bash_profile.d"
if [ -d "$BASH_PROFILE_D" ]; then
	for f in "$BASH_PROFILE_D"/*; do
		if [ -r "$f" ]; then
			#shellcheck disable=SC1090
			source "$f"
		fi
	done
fi

# Source .bashrc
if [ -r "$HOME/.bashrc" ]; then
	#shellcheck disable=SC1091
	source "$HOME/.bashrc"
fi
