# Source .profile
if [ -r "$HOME/.profile" ]; then
	source "$HOME/.profile"
fi


# Disable Bash history
export HISTCONTROL='erasedups:ignorespace'
export HISTFILE='/dev/null'

# Set up LS_COLORS using dircolors
eval "$(dircolors)"


# Source .bashrc
if [ -r "$HOME/.bashrc" ]; then
	source "$HOME/.bashrc"
fi
