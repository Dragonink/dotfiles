# Source .profile
if [ -r "$HOME/.profile" ]; then
	#shellcheck disable=SC1091
	source "$HOME/.profile"
fi


# Disable Bash history
set +o history

# Set up LS_COLORS using dircolors
eval "$(dircolors)"


# Source .bashrc
if [ -r "$HOME/.bashrc" ]; then
	#shellcheck disable=SC1091
	source "$HOME/.bashrc"
fi
