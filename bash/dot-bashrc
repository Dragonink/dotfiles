# Disable Bash history
export HISTCONTROL='erasedups:ignorespace'
export HISTFILE='/dev/null'

# Check for running jobs before exiting
shopt -s checkjobs
# Check the window size after each command
shopt -s checkwinsize
# Extend pattern matching
shopt -s extglob globstar nullglob
# Enable programmable completions
shopt -s progcomp progcomp_alias


# Source .config/bashrc.d/*
if [ -d "$XDG_CONFIG_HOME/bashrc.d" ]; then
	for f in "$XDG_CONFIG_HOME/bashrc.d"/*; do
		#shellcheck disable=SC1090
		source "$f"
	done
fi
